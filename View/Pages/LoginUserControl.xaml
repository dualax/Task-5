<Page x:Class="WpfApp4.View.Pages.LoginUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"
             d:DesignWidth="640"
             FontFamily="Comic Sans MS">

    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="300"
                Width="300"
                CornerRadius="25"
                Background="White"
                Padding="10"
                BorderBrush="#C25300"
                BorderThickness="2"
                Effect="{StaticResource MaterialDesignElevationShadow12}">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#C25300"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="CornerRadius" Value="25"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Effect="{StaticResource MaterialDesignElevationShadow24}">
                    <materialDesign:PackIcon Kind="Loaf"
                                             Width="65"
                                             Height="65"
                                             Foreground="#FF7F5036"/>
                </Border>

                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Батонное странствие"
                               HorizontalAlignment="Center"
                               Foreground="#FF7F5036"
                               FontWeight="Light"
                               Effect="{StaticResource MaterialDesignElevationShadow16}"
                               FontSize="25">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 10 0 0">
                        <materialDesign:PackIcon Kind="Idea"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0 3 3 0"
                                                 Foreground="#FF7F5036"/>
                        <TextBox Width="178"
                                 x:Name="TBLogin"
                                 FontSize="15"
                                 Foreground="#FF7F5036"
                                 materialDesign:HintAssist.Hint="Введите логин"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#C25300"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 10 0 0">
                        <materialDesign:PackIcon Kind="Thunder"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0 3 3 0"
                                                 Foreground="#FF7F5036"/>
                        <PasswordBox Width="178"
                                     x:Name="PbUid"
                                     FontSize="15"
                                     Foreground="#FF7F5036"
                                     materialDesign:HintAssist.Hint="Введите UID"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#C25300"
                                     materialDesign:TextFieldAssist.HasClearButton="True"/>
                    </StackPanel>

                    <Button Margin="0 20 0 0"
                            x:Name="BtnLogin"
                            Click="BtnLogin_Click"
                            Background="Transparent"
                            BorderBrush="#FF7F5036"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="BusElectric"
                                                     Margin="0 3 3 0"
                                                     Foreground="#FF7F5036"/>
                            <TextBlock Text="Поехали!"
                                       Foreground="#FF7F5036"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Page>